{
  "manifest_version": 3,
  "name": "ChakWrite AI Assistant",
  "version": "1.2",
  "description": "Neuro-inclusive AI writing assistant with dyslexia, ADHD, and autism-friendly modes",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/ui/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ChakWrite"
  },
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/overlay.js"],
      "css": ["styles/overlay.css", "styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/OpenDyslexic-Regular.otf",
        "styles/overlay.css",
        "styles/content.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ]
}
