{
  "manifest_version": 3,
  "name": "ChakWrite AI Writing Assistant",
  "version": "1.0.0",
  "description": "An AI-powered writing assistant with neuro-inclusive features, using Chrome's built-in AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "ai"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
