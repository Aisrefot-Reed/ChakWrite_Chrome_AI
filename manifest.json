{
  "manifest_version": 3,
  "name": "ChakWrite AI Writing Assistant",
  "version": "1.0.0",
  "description": "An AI-powered writing assistant with neuro-inclusive features, using Chrome's built-in AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "src/ui/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/ui/options/index.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "fonts/*.otf",
        "src/utils/*.js",
        "vendor/*",
        "models/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
        "vendor/*",
        "models/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "rewrite_selection": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Rewrite selected text"
    },
    "proofread_selection": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Proofread selected text"
    }
  }
}
